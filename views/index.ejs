<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>ReNuMate</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">ReNuMate</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addRequest">Add new request</a>        
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/productListing">Product Listing</a>       
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add new Product</a>       
          </li>
        </ul>
      </div>
    </div>
</nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Customer Requests</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th>Customer ID</th>
            <th>customer name</th>
            <th>type of house</th>
            <th>contact</th>
            <th>Info</th>
            <th>Due Date</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < customers.length; i++) { %>
          <tr>
            <td><%= customers[i].customer_id %></td>
            <td><%= customers[i].customer_name%></td>
            <td><%= customers[i].type_of_house %></td>
            <td><%= customers[i].contact %></td>
            <td><%= customers[i].info_reno %></td>
            <td><%= new Date(customers[i].due_date).toLocaleDateString() %></td>
            <td><a href="/customer/<%= customers[i].customer_id %>">View Details</a></td>
            <td><a href="/editRequest/<%= customers[i].customer_id %>">Edit</a></td>
            <td><a href="/deleteRequest/<%= customers[i].customer_id %>" onclick="return confirm('Are you sure you want to delete this request?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>


